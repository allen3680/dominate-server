{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": ["es2020", "es2017", "es6", "es5"],
    "typeRoots": ["node_modules/@types"],
    "types": [
      "big.js",
      "cron",
      "express",
      "express-session",
      "jest",
      "jsonfile",
      "mkdirp",
      "multer",
      "node",
      "supertest",
      "uuid"
    ]
  }
}
